{
  "manifest_version": 3,
  "version": "0.2.0",
  "name": "Duckduckgo auto themer",

  "homepage_url": "https://gitlab.com/daanturo/duckduckgo-auto-themer-webextension",

  "description": "Automatically change Duckduckgo's theme based on the browser's color scheme.",

  "permissions": ["tabs", "cookies", "storage"],

  "host_permissions": ["*://duckduckgo.com/*"],

  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"]
  },

  "options_ui": {
    "page": "dist/options/options.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "duckduckgo-auto-themer@example.org"
    }
  },

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["dist/shared.js", "images/*"]
    }
  ]
}
