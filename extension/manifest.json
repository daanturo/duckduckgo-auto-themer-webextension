{
  "manifest_version": 3,
  "version": "0.2.0",
  "name": "Duckduckgo auto theme setter",

  "permissions": ["tabs", "cookies", "storage"],

  "host_permissions": ["*://duckduckgo.com/*"],

  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"]
  },


  "options_ui": {
    "page": "dist/options/options.html",
    "open_in_tab": true
  },

  "homepage_url": "https://gitlab.com/daanturo/duckduckgo-auto-theme-setter-webextension",

  "browser_specific_settings": {
    "gecko": {
      "id": "duckduckgo-auto-theme-setter@example.org"
    }
  },

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["dist/shared.js", "images/*"]
    }
  ]
}
